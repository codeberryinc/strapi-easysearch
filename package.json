{
  "version": "1.0.4",
  "keywords": [
    "strapi",
    "strapi-plugin",
    "strapi-search",
    "easy-search",
    "fuzzy-search",
    "transliteration",
    "search",
    "graphql",
    "rest-api",
    "strapi-plugin-search",
    "fuzzy",
    "transliteration",
    "subscription",
    "middleware",
    "content-filtering",
    "cms"
  ],
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeberryinc/strapi-easysearch.git"
  },
  "exports": {
    "./package.json": "./package.json",
    "./strapi-server": {
      "types": "./dist/server/src/index.d.ts",
      "source": "./server/src/index.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "strapi-plugin build",
    "watch": "strapi-plugin watch",
    "watch:link": "strapi-plugin watch:link",
    "verify": "strapi-plugin verify",
    "test:ts:back": "run -T tsc -p server/tsconfig.json"
  },
  "dependencies": {
    "fuzzysort": "^3.1.0",
    "transliteration": "^2.3.5"
  },
  "devDependencies": {
    "@strapi/sdk-plugin": "^5.3.2",
    "@strapi/strapi": "^5.10.3",
    "@strapi/typescript-utils": "^5.10.3",
    "prettier": "^3.5.2",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "@strapi/sdk-plugin": "^5.3.2",
    "@strapi/strapi": "^5.10.3"
  },
  "strapi": {
    "kind": "plugin",
    "name": "easy-search",
    "displayName": "EasySearch",
    "description": "A Strapi v5 plugin providing transliterated fuzzy search capabilities and advanced filtering logic for both GraphQL and REST APIs."
  },
  "name": "@codeberry/easysearch",
  "description": "A Strapi v5 plugin providing transliterated fuzzy search capabilities and advanced filtering logic for both GraphQL and REST APIs.",
  "license": "MIT",
  "author": "Simeon Iliev <simeon@codeberry.io>"
}
